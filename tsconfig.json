{
  "compilerOptions": {
    "module": "nodenext",
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "lib": ["es2022"],
    "target": "ES6",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}